<% title = "유저 정보"; %>

<link rel="stylesheet" href="/public/css/forum_user.css">

<div class="box">
    <div style="height: auto; margin: 10px; padding: 20px; background-color: white; border-radius: 5px;">
        <div style="border: 2px solid rgba(102, 101, 101, 0.24); border-radius: 10px;">
            <div class="user_info_box" data-user_id="<%= user_info.id %>">
                <div class="user_info_box_text">
                    <h4><%= user_info.nickname %></h4>
                </div>
                <div class="user_info_box_ctl">
                    <nav style=" border-radius: 10px;">
                        <ul>
                            <li><div><button type="button" class="user_contents">게시물</button></div></li>
                            <li><div><button type="button" class="user_activity">활동</button></div></li>
                            <% if ( userId === user_info.id){ %>
                                <li><div><button type="button" class="user_bookmark">북마크</button></div></li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <div class="user_list_box">
            <div>
                <ul class="user_list_box_dom">
                </ul>
            </div>
            <div style="display: flex; justify-content: center; padding: 20px;">
                <div>
                    <button type="button" id="more_button" class="more_button"> + See More</button>
                </div>
                <span style="color: green;"></span>
            </div>
        </div>
    </div>
</div>

<script src="/public/js/forum_user.js"></script>
